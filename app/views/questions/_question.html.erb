<% questions_block_id = "question_#{question.id}" %>
<% question_number = @questions.size - question_counter %>
<% question_link = request.base_url + "#{user_path(question.user)}#question_#{question.id}" %>

<div id="<%= questions_block_id %>" class="question">
  <div class="question-content">
    <div class="question-text text-lead">
      <%= render_with_hashtags(question.text) %>
    </div>

    <% if question.answer.present? %>
      <div class="question-answer text-lead">
        <%= render_with_hashtags(question.answer) %>
      </div>
    <% end %>

    <div class="question-additional-information">
      <div class="question-likes">
        <% pre_like = question.likes.find { |like| like.user_id == current_user.id} if current_user.present? %>

        <p><%= question.likes.count %> <%= (question.likes.count) == 1 ? 'Like' : 'Likes'%></p>

        <% if pre_like %>
          <%= button_to question_like_path(question, pre_like), method: :delete do %>
            Dislike <%= fa_icon('heart') %>
          <% end %>
        <% else %>
          <%= button_to question_likes_path(question), method: :post do %>
            Like <%= fa_icon('heart-o') %>
          <% end %>
        <% end %>
      </div>
      <div class="question-date-author-content">
        <div class="question-author">
          <% if question.author.present? %>
            <%= link_to_unless_current "@#{question.author.username}", user_path(question.author) %>
          <% else %>
            <p>Гость сайта</p>
          <% end %>
        </div>
        <div class="question-date">
          <%= l(question.created_at, format: :short) %>
        </div>
      </div>
      <div class="question-link">
        Вопрос №<%= question_number %>
        <div class="tooltip">
          <button class="copy-question-link-to-clipboard" id="number-<%= question_number %>" data-link="<%= question_link %>">
            <span class="tooltip-text" id="number-<%= question_number %>">Copy question link to clipboard</span>
            Ссылка <%= fa_icon('external-link') %>
          </button>
        </div>
      </div>
    </div>
  </div>

  <% if question.user == current_user %>
    <% edit_icon = question.answer.blank? ? 'reply' : 'pencil' %>

    <div class="question-actions">
      <%= link_to fa_icon(edit_icon), edit_question_path(question) %>
      <%= link_to fa_icon('trash-o'), question_path(question),
                  method: :delete, data: { confirm: 'Точно удалить вопрос?' } %>
    </div>
  <% end %>
</div>
